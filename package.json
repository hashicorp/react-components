{
  "name": "@hashicorp/react-components",
  "version": "0.0.0",
  "dependencies": {
    "@hashicorp/mktg-global-styles": "^2.1.0",
    "@hashicorp/nextjs-scripts": "^14.1.4",
    "next": "9.5.5",
    "next-remote-watch": "^0.3.0",
    "node-cache": "^5.1.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "swingset": "^0.4.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "eslint": "^7.18.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "regenerator-runtime": "^0.13.7"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "lint": "next-hashicorp lint",
    "release": "npm run release:check-branch && npm run release:check-auth && lerna publish",
    "release:canary": "npm run release:check-auth && lerna publish --dist-tag=next --canary",
    "release:check-auth": "./scripts/release-check-npm-auth.sh",
    "release:check-branch": "./scripts/release-check-branch.sh",
    "start": "next-remote-watch \"./packages/*/{docs.mdx,props.js}\"",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "test:watch": "jest --watch",
    "vercel-build": "npm run bootstrap && next build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "next-hashicorp format",
      "eslint"
    ]
  }
}
