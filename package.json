{
  "name": "@hashicorp/react-components",
  "version": "0.0.0",
  "dependencies": {
    "@hashicorp/mktg-global-styles": "^2.1.1-canary.0",
    "@hashicorp/nextjs-scripts": "^16.2.0",
    "@hashicorp/sentinel-embedded": "^0.0.9",
    "classnames": "^2.2.6",
    "next": "^10.0.6",
    "next-remote-watch": "^0.3.0",
    "node-cache": "^5.1.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "swingset": "0.6.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.18.0",
    "husky": "^4.3.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "regenerator-runtime": "^0.13.7"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bs": "npm run bootstrap",
    "hard-reset": "rm -rf node_modules && rm -rf .next && lerna clean -y && npm i && npm run bs",
    "lint": "next-hashicorp lint",
    "release": "npm run release:check-branch && npm run release:check-auth && lerna publish",
    "release:canary": "npm run release:check-auth && lerna publish --dist-tag=next --canary",
    "release:check-auth": "./scripts/release-check-npm-auth.sh",
    "release:check-branch": "./scripts/release-check-branch.sh",
    "start": "next-remote-watch \"./packages/*/{docs.mdx,props.js}\"",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "test:watch": "jest --watch",
    "vercel-build": "npm run bootstrap && next build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "next-hashicorp format",
      "next-hashicorp lint"
    ]
  }
}
