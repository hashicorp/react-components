{
  heading: {
    type: 'string',
    description: 'text displayed in the primary heading',
    control: 'text',
  },
  theme: {
    type: 'string',
    description: 'used to control whether the component appears on a light or dark background',
    control: 'select',
    options: ['light', 'dark'],
  },
  brand: {
    type: 'string',
    description: 'product-centric brand accents, if necessary',
    control: 'select',
    options: [
      'hashicorp',
      'terraform',
      'vault',
      'consul',
      'nomad',
      'packer',
      'vagrant',
    ],
  },
  features: {
    type: 'array',
    description: 'The actual "features" rendered by the component',
    itemType: '{ heading: string, content: string, logo: { url: string, alt: string }, image: { url: string, alt: string }, link: { text: string, url: string, type: string } }',
  },
}
