{
  textSplit: {
    type: 'object',
    description: 'Data sent to the TextSplit component',
    required: true,
    // sub-props
    heading: {
      type: 'string',
      description: 'Text heading',
    },
    content: {
      type: 'string',
      description: 'Text content',
    },
    brand: {
      type: 'string',
      description: 'Brand highlight color',
      options: [
        'hashicorp',
        'terraform',
        'vault',
        'consul',
        'nomad',
        'packer',
        'vagrant',
      ],
    },
    theme: {
      type: 'string',
      description: 'Overall color theme based on the background',
      options: ['light', 'gray', 'dark'],
    },
    checkboxes: {
      type: 'array',
      description: 'An array of strings to be rendered as a list of checkboxes',
      itemType: 'string',
    },
    linkStyle: {
      type: 'string',
      description: 'Render as buttons or links',
      options: ['buttons', 'links'],
    },
    links: {
      type: 'array',
      description: 'A set of links to be displayed below the content',
      itemType: '{ text: string, url: string, type: string }',
    },
    textSide: {
      type: 'string',
      options: ['left', 'right'],
      description: 'Text appears on the left or right side',
    },
  },
  images: {
    type: 'object | string',
    description: 'Data passed to the LogoGrid component. Can also be a string which is mapped to a company logo.',
    required: true,
    // sub-props
    url: {
      type: 'string',
      description: 'URL of the image',
    },
    alt: {
      type: 'string',
      description: 'Alternate text if the image cannot be displayed',
    },
  },
}
