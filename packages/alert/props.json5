{
  url: {
    description: 'URL that the alert points to',
    type: 'string',
    control: 'text',
    defaultValue: '#',
    required: true,
  },
  tag: {
    description: 'Label or summary of the main alert message',
    type: 'string',
    control: 'text',
    defaultValue: 'New',
    required: true,
  },
  text: {
    description: 'Primary message of the alert',
    type: 'string',
    control: 'text',
    defaultValue: 'Tortor Tellus Inceptos Parturient',
    required: true,
  },
  tagColor: {
    description: 'Background color of the tag',
    type: 'string',
    control: 'select',
    options: [
      'terraform-purple',
      'nomad-green',
      'vault-gray',
      'consul-pink',
      'vagrant-blue',
      'error-red',
      'warning-yellow',
      'success-green',
    ],
    defaultValue: 'vault-gray',
  },
  textColor: {
    description: 'Background color of the text - default is `light`',
    type: 'string',
    control: 'select',
    options: ['dark', 'light'],
    defaultValue: 'dark',
  },
}
